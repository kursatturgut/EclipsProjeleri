	// tek seferde olmasý için tüm hatalarý baþtan söylemeli
	
	Scanner scan=new Scanner(System.in);
	System.out.println("lütfen þifrenizi giriniz");
	
	String sifre="";
	boolean khk=false;
	do {
		String sifreg=scan.nextLine();
		
		
		küçükharf(sifreg);
		//büyükharf();
		//özelkarakter();
		//sekizkark();
		
		
		
	} while (khk);{
		System.out.println("baþsarýlý");
	}
		
	
	
	
	
	
	
	
	
	
	
	
	
	
	
	
	
	
	
	
	
	}

	
	
	private static boolean küçükharf(String sifreg) {
		boolean khk=false;
		String k="abcdefghýijklmnoöprsþtuüvyz";
		for (int i = 0; i < k.length()-1; i++) {
        	if (k.contains(sifreg.substring(i, i+1))) {
		    khk = true;
		    break;
		    
			}	
		
	}if (!khk) {
		System.out.println("lütffen küçük harf içeren siþre griniz");}
return khk;
}}
